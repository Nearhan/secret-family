@import 'normalize'
@import 'helper'
@import 'bootstrap/index'

/* variables */
$lightgrey = #999
$linkColor = #555
$grey = #eee
$black = #222
$white = #f7f7f7

html
body
  font-size: 16px
  font-family: monospace

html
button
input
select
textarea
  color: $black
  width: 100%
  height: 100%

button
  background-color: #96A796
  color: #030
  border: #030 solid thick
  margin: 4px
  font-size: 16px

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor,10%)

body
  color: $black
  font-size: 1em
  line-height: 1.5
  background: #96a796
  
header
  background: $grey
  color:$black
  padding: 1em
  
  nav
    float:right
    user-select:none
    
  .nav-item
    float:left
    margin-left:.5em
    
    a.active
      text-decoration:underline
    
.content
  padding: 1em

.weekcounter
  top: 20px
  left: 10px

.quit
  position: absolute
  top: 10px
  left: 10px

.statusbar
  height: 15px
  background-color: #030
  border: 1px solid #030

